{
  "expo": {
    "name": "TTMKonnect",
    "slug": "TruckLogELD",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E293B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ttm.TTMKonnect",
      "statusBar": {
        "style": "auto",
        "backgroundColor": "transparent"
      }
    },
    "android": {
      "icon": "./assets/images/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1E293B"
      },
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.ttm.TTMKonnect",
      "statusBar": {
        "style": "auto",
        "backgroundColor": "transparent"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-web-browser",
      [
        "expo-splash-screen",
        {
          "ios": {
            "backgroundColor": "#1E293B",
            "image": "./assets/images/splash-icon.png",
            "resizeMode": "contain"
          },
          "android": {
            "backgroundColor": "#1E293B",
            "image": "./assets/images/splash-icon.png",
            "imageWidth": 200
          }
        }
      ],
      [
        "react-native-ble-manager",
        {
          "isBackgroundEnabled": true,
          "bluetoothAlwaysPermission": "Allow $(PRODUCT_NAME) to connect to ELD hardware.",
          "bluetoothPeripheralPermission": "Allow $(PRODUCT_NAME) to find and connect to ELD hardware.",
          "peripherals": [
            "*"
          ],
          "restoreStateIdentifier": "com.TTMKonnect.blemanager",
          "restoreStateFunction": "restoreBleManagerState"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bd845dde-3b15-4bf8-95cc-7b802d549645"
      }
    }
  }
}
